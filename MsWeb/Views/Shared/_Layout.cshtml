<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style type="text/css">
        html{height:100%;}
        body{min-height:90%;margin:0;padding:0;position:relative;}
        header{background-color: #ffe4c4;}
        main{padding-top:70px; }
        footer{position:absolute;bottom:0;width:100%;height:50px;}
    </style>
</head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
<body>
    <main>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("MSKJ", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("闪荐", "GoodsIndex", "Home", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("优惠券", "Index", "Goods", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("招募令", "Recruit", "Home", new { area = "" }, null)</li>
                        @*<li><a href="http://blog.mingshukeji.com.cn"> 博客</a></li>*@
                    </ul>
                </div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
        </div>
    </main>
    <footer>
        <hr />
        <p>&nbsp;&nbsp;&nbsp;&nbsp;&copy; @DateTime.Now.Year Mingshukeji.com.cn  皖ICP备17020567</p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
